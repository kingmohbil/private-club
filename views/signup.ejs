<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("boilerplate", {title :'Sign Up'}) %>
    <link rel="stylesheet" href="../css/signup.css" />
    <link rel="icon" type="image/x-icon" href="../images/no-entry.png" />
  </head>
  <body>
    <nav class="navbar bg-dark fixed-top" data-bs-theme="dark">
      <div class="container-fluid">
        <div class="navbar-brand">Private Club</div>
        <span class="nav-bar-links">
          <a class="nav-bar-link" href="/login">Login</a>
        </span>
      </div>
    </nav>
    <div class="content">
      <% if(locals.errors){ %>
      <div id="alerts-container">
        <% locals.errors.forEach(element =>{ %>
        <div class="alert alert-danger" role="alert"><%= element.msg %></div>
        <% }) %>
      </div>
      <% } %>
      <form action="/signup" method="POST" class="row g-3">
        <div class="col-md-6">
          <label for="first-name" class="form-label">First Name</label>
          <input
            type="text"
            class="form-control"
            id="first-name"
            name="firstName"
            value="<%= locals.firstName %>"
            minlength="1"
            maxlength="20"
            required
          />
        </div>
        <div class="col-md-6">
          <label for="last-name" class="form-label">Last Name</label>
          <input
            type="text"
            class="form-control"
            id="-last-name"
            name="lastName"
            value="<%= locals.lastName %>"
            minlength="1"
            maxlength="20"
            required
          />
        </div>
        <div class="col-md-6">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= locals.email %>"
            required
          />
        </div>
        <div class="col-md-6">
          <label for="Password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            value="<%= locals.password %>"
            minlength="8"
            maxlength="20"
            required
          />
        </div>
        <div class="col-12" id="signup-btn-container">
          <button class="btn btn-dark" type="submit">Sign Up</button>
        </div>
      </form>
    </div>
  </body>
</html>
